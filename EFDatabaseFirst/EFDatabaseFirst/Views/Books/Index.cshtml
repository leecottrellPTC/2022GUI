@model IEnumerable<EFDatabaseFirst.Models.Book>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PublisherCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Paperback)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Stuff)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PublisherCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Paperback)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Stuff)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.BookCode">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.BookCode">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.BookCode">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
