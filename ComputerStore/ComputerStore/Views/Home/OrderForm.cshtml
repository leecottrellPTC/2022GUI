@model OrderItem;
@{
    ViewData["Title"] = "OrderForm";
}

<h1>OrderForm</h1>

<form asp-action="OrderForm" method="POST">


    <div class="form-group">
        <label asp-for="Email">Enter your email address</label>
        <input type="email" asp-for="Email" placeholder="you@AppDomain.com" 
            class="form-control"/>
            <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Speed">Speed</label>
        <input type="decimal" asp-for="Speed" placeholder="3.5" class="form-control" step=".1" />    <span asp-validation-for="Speed" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="HDSize">Hard Drive Storage in TB</label>
        <input type="decimal" asp-for="HDSize" placeholder="2" class="form-control" />
        <span asp-validation-for="HDSize" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="RAM">RAM in GB</label>
        <input type="number" asp-for="RAM" placeholder="16" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Processor">Pick an intel processor</label>
        <select asp-for="Processor" class="form-control">
            <option value="">Pick a processor</option>
            <option value="i3">Intel i3</option>
            <option value="i5">Intel i5</option>
            <option value="i7">Intel i7</option>
            <option value="i9">Intel i9</option>
        </select>
        <span asp-validation-for="Processor" class="text-danger"></span>
    </div>
    <div class="form-group">
        <button class="btn btn-primary" type="submit">Order this computer</button>
        <button class="btn btn-danger" type="reset">Cancel this order</button>
    </div>


</form>

